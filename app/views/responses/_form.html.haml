= simple_form_for @response, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.hidden_field :ticket_id, :value => @response.ticket_id

    = f.input :user_id, :collection => User.all.collect {|d| [ d.email, d.id ] }, :as => :select, include_blank: false
    = f.input :body

  .form-actions
    = f.button :submit

