!!! 5
%html
  %head
    %title SupportFu
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container
      #user_nav
        - if current_user
          %span== Logged in as "#{current_user.email}.

          %span= link_to "Log out", logout_path
        - else
          %span= link_to "Sign up", signup_path
          of
          %span= link_to "log in", login_path

      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      = yield


