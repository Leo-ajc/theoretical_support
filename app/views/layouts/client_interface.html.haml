%html
  %head
    %title SupportFu
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .container

      - flash.each do |name, msg|
        .alert{:class => (name == :notice ? "success" : "error")}
          %a.close{:data => {:dismiss => "alert"}}
            x
          = msg

      = yield


