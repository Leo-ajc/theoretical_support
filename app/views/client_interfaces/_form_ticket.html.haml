
= simple_form_for @ticket, :url => create_client_ticket_path, :method => :post, :html => { :class => 'form-horizontal' } do |f|

  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :name
    = f.input :department_id, :collection => Department.all.collect {|d| [ d.name, d.id ] }, :as => :select, include_blank: false
    = f.input :body

  .form-actions
    = f.button :submit