= simple_form_for @ticket, :html => { :class => 'form-horizontal' } do |f|

  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :department_id, :collection => Department.all.collect {|d| [ d.name, d.id ] }, :as => :select, include_blank: false
    = f.input :status_id, :collection => Status.all.collect {|d| [ d.description, d.id ] }, :as => :select, include_blank: false
    = f.input :user_id, :collection => User.all.collect {|d| [ d.email, d.id ] }, :as => :select, include_blank: false unless controller.controller_name == 'clients'
    = f.input :body


  .form-actions
    = f.button :submit
